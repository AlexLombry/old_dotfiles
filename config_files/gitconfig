# gitconfig
[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f
[push]
	default = current
[credential]
	helper = osxkeychain
[alias]
    pl = pull --rebase
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    count = shortlog -sn
    df = diff --color
    wdf = diff --word-diff --color
    fdf = diff --name-only --color
    br = branch -a
    sh = show --pretty=format: --name-only
    last = log -1 HEAD
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
    lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    # show what I did today
    day = "!sh -c 'git log --reverse --no-merges --branches=* --date=local --after=\"yesterday 11:59PM\" --author=\"`git config --get user.name`\"'"
    s = status --short
[core]
    excludesfile = ~/.gitignore_global
    quotepath = false
    editor = vim
[color]
    ui = true
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[init]
	templatedir = ~/.git-templates
[user]
	name = Alex Lombry
	email = alex.lombry@gmail.com
