GPG_TTY=$(tty)
export GPG_TTY

export APP_ENV="dev"
export XDEBUG_CONFIG="idekey=phpstorm"
export DOTFILES=$HOME/.dotfiles
export DOCKER_CLIENT_TIMEOUT=120
export COMPOSE_HTTP_TIMEOUT=120
export LANG="en_US.UTF-8"
export LC_COLLATE="en_US.UTF-8"
export LC_CTYPE=C
export LC_MESSAGES="en_US.UTF-8"
export LC_MONETARY="en_US.UTF-8"
export LC_NUMERIC="en_US.UTF-8"
export LC_TIME="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
export DISPLAY=":0.0"
export EDITOR='vim'

DISABLE_UNTRACKED_FILES_DIRTY="true"

# zsh builtin to re-run last line. dangerous. do not want. use `!!`.
disable r

for script in $DOTFILES/scripts/zsh/*.zsh; do source $script; done

PATH+=:$HOME/.composer/vendor/bin
PATH+=:$HOME/.symfony/bin
PATH+=:/usr/local/sbin
PATH+=:/usr/local/opt/awscli@1/bin

source $CODEFOLDER/tooling/manomano.zsh

export HOMEBREW_FORCE_BREWED_CURL=1

# Base16 Shell
BASE16_SHELL="$HOME/.config/base16-shell/"
[ -n "$PS1" ] && \
    [ -s "$BASE16_SHELL/profile_helper.sh" ] && \
        eval "$("$BASE16_SHELL/profile_helper.sh")"

eval $(thefuck --alias)
