# gitconfig
[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f
[push]
	default = current
[credential]
	helper = osxkeychain
[alias]
	lg = log --graph --date=relative --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ad)%Creset'
	oops = commit --amend --no-edit
	rc = rebase --continue
	rs = rebase --skip
	rbi = "!f() { git rebase -i HEAD~$1; }; f"
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    count = shortlog -sn
    df = diff --color
    wdf = diff --word-diff --color
    fdf = diff --name-only --color
    br = branch -a
    sh = show --pretty=format: --name-only
    last = log -1 HEAD
    lgg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
    lggg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    # show what I did today
    day = "!sh -c 'git log --reverse --no-merges --branches=* --date=local --after=\"yesterday 11:59PM\" --author=\"`git config --get user.name`\"'"
    s = status --short
[core]
	excludesfile = /Users/alex/.gitignore_global
    quotepath = false
	editor = vim
	hooksPath = /Users/alex/dotfiles/softs/git/hooks
[color]
    ui = true
    status = always
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[user]
	name = Alex Lombry
	email = alex.lombry@gmail.com
	name = Alex
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = .gitmessage
[rerere]
	enable = true
[pull]
	rebase = true
[merge]
	ff = false
	conflictStyle = diff3 
