# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh
export DOTFILES=$HOME/dotfiles

export PC_ROOT_FOLDER=$HOME/Pandacraft
export PC_MAGENTO_ROOT_FOLDER=$PC_ROOT_FOLDER/magento

export UNISONLOCALHOSTNAME=$(hostname)

export LANG="en_US.UTF-8"
export LC_COLLATE="en_US.UTF-8"
export LC_CTYPE=C
export LC_MESSAGES="en_US.UTF-8"
export LC_MONETARY="en_US.UTF-8"
export LC_NUMERIC="en_US.UTF-8"
export LC_TIME="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
export DISPLAY=":0.0"
export EDITOR='vim'

DISABLE_UNTRACKED_FILES_DIRTY="true"

# zsh builtin to re-run last line. dangerous. do not want. use `!!`.
disable r

# define the code directory
if [[ -d ~/Labs ]]; then
    export CODE_DIR=~/Labs
fi

# Theme
# ZSH_THEME="agnoster"
ZSH_THEME="awesomepanda"
autoload -U promptinit; promptinit

plugins=(git brew command-not-found jsontools osx docker docker-compose sudo)

# Zsh sourcecustom
source $ZSH/oh-my-zsh.sh
for script in $DOTFILES/zsh/*.zsh; do source $script; done
source ~/.pandacraft.zsh

# User configuration
export TERM="xterm-256color"
export GEM_HOME=$HOME/.gem
export HOMEBREW_CASK_OPTS="--appdir=/Applications"
export GO111MODULE=on
export GOPATH="$HOME/Code/"
export HOMEBREW_NO_AUTO_UPDATE=1
export SSH_KEY_PATH="~/.ssh/id_rsa"

export PATH="/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
#export PATH="/usr/local/opt/php@7.2/bin:$PATH"
#export PATH="/usr/local/opt/php@7.2/sbin:$PATH"

PATH+=:/usr/local/opt/php@7.2/bin
PATH+=:/usr/local/opt/php@7.2/sbin

PATH+=:/usr/local/opt/coreutils/libexec/gnubin
PATH+=:$HOME/.composer/vendor/bin
PATH+=:/usr/local/opt/coreutils/libexec/gnubin
PATH+=:/usr/local/opt/python/libexec/bin
PATH+=:/usr/local/opt/gettext/bin
PATH+=:/usr/local/opt/mysql@5.7/bin
PATH+=:$HOME/.symfony/bin
PATH+=:/usr/local/opt/nss/bin
PATH+=:$HOME/Downloads/sonar-scanner/bin

# Go And Ruby
PATH+=:$GOROOT/bin
PATH+=:$GEM_HOME/bin

export XDEBUG_CONFIG="idekey=INTELLIJ"
export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"
MANPATH="/path/to/git-subrepo/man:$MANPATH"
export APP_ENV="dev"
export APPLICATION_FOLDER=$HOME/Pandacraft
export HOMEBREW_FORCE_BREWED_CURL=1

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

cdpath=(~/Labs/ ~/Labs/Pandacraft)

# Keypad
# 0 . Enter
bindkey -s "^[Op" "0"
bindkey -s "^[Ol" "."
bindkey -s "^[OM" "^M"
# 1 2 3
bindkey -s "^[Oq" "1"
bindkey -s "^[Or" "2"
bindkey -s "^[Os" "3"
# 4 5 6
bindkey -s "^[Ot" "4"
bindkey -s "^[Ou" "5"
bindkey -s "^[Ov" "6"
# 7 8 9
bindkey -s "^[Ow" "7"
bindkey -s "^[Ox" "8"
bindkey -s "^[Oy" "9"
# + -  * /
bindkey -s "^[Ok" "+"
bindkey -s "^[Om" "-"
bindkey -s "^[Oj" "*"
bindkey -s "^[Oo" "/"

# History file
export HISTFILE=~/.zsh_history

# Don't show duplicate history entires
setopt hist_find_no_dups

# Remove unnecessary blanks from history
setopt hist_reduce_blanks

# Share history between instances
setopt share_history

# fix delete key on macOS
[ $MACOS ] && bindkey "\e[3~" delete-char

#THIS MUST BE AT THE END OF THE FILE FOR SDKMAN TO WORK!!!
#export SDKMAN_DIR="/Users/alex/.sdkman"
#[[ -s "/Users/alex/.sdkman/bin/sdkman-init.sh" ]] && source "/Users/alex/.sdkman/bin/sdkman-init.sh"
POWERLEVEL9K_MODE='nerdfont-complete'
