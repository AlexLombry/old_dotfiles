SPACESHIP_PROMPT_FIRST_PREFIX_SHOW="true"
SPACESHIP_USER_SHOW="true"

SOBOLE_THEME_MODE=dark

# plugins=(zsh-autosuggestions git brew command-not-found kubectl)
# plugins=(git osx kubectl jsontools)

# Zsh custom
source $ZSH/oh-my-zsh.sh
source $DOTFILES/zsh/aliases.zsh
source $DOTFILES/zsh/functions.zsh
source $DOTFILES/zsh/git.zsh

# User configuration
export EDITOR='vim'

#export GOBIN="/Users/alex/Code/bin/"
export PATH="/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/opt/coreutils/libexec/gnubin:$PATH"
export PATH="$HOME/.composer/vendor/bin:$PATH"
export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
export PATH="/usr/local/opt/python/libexec/bin:$PATH"
export PATH="/usr/local/opt/php@7.2/bin:$PATH"
export PATH="/usr/local/opt/php@7.2/sbin:$PATH"
export GOPATH="$HOME/Code/"

export PATH=$PATH:$GOROOT/bin

# Visual Studio Code Xdebug configuration for PHP Debug Plugin
export XDEBUG_CONFIG="idekey=VSCODE"

# Java home for Android development
#export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_201.jdk/Contents/Home

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# Spark variable
export SPARK_HOME=/usr/local/Cellar/apache-spark/2.3.2/libexec
export PATH=$SPARK_HOME/bin:$PATH
export PATH=$HOME/.composer/vendor/bin:$PATH
export PYSPARK_PYTHON=/usr/local/Cellar/python/3.7.0/libexec/bin/python
